@using EntityLayer.Entities
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Admin Listesi</h4>
                
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                        <th>#</th>
                         <th>Kullanıcı Adı</th>
                         <th>Sil</th>
                         <th>Güncelle</th>
                         
                          
                        </tr>
                      </thead>
                      <tbody>
                       @foreach(var item in Model)

                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.AdminName</td>  
                                <td> <a href="/Admin/DeleteAdmin/@item.ID" class="btn btn-outline-danger">Sil</a> </td>
                                <td> <a href="/Admin/UpdateAdmin/@item.ID" class="btn btn-outline-success">Güncelle</a> </td>
                            </tr>
                        }

                      </tbody>
                    </table>
                    <br />
                   <a href="/Admin/AddAdmin" class="btn btn-outline-success">Yeni Admin Girişi</a>
                  </div>
                </div>
              </div>
            </div>



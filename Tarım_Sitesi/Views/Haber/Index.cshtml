@using EntityLayer.Entities
@model List<Haberler>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Duyuru Listesi</h4>
                
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                        <th>#</th>
                         <th>Başlık</th>
                          <th>Açıklama</th>
                           <th>Tarih</th>
                            <th>Resim</th>

                         <th>Sil</th>
                         <th>Güncelle</th>
                          <th>Durum</th>
                          
                        </tr>
                      </thead>
                      <tbody>
                       @foreach(var item in Model)

                        {
                            <tr>

                                <td>@item.ID</td>
                                  <td>@item.Ttile</td>
                                   <td>@item.Description</td>
                                   <td>@item.Tarih</td>
                            
                             <td> <a href="/Haber/DeleteHaber/@item.ID" class="btn btn-outline-danger">Sil</a> </td>
                              <td> <a href="/Haber/UpdateHaber/@item.ID" class="btn btn-outline-success">Güncelle</a> </td>

                              @if ( item.Status == true)
                                {
                                    <td> <a href="/Haber/ChangeStatusToFalse/@item.ID" class="btn btn-outline-secondary">Pasif Yap</a> </td>
                                }
                                else
                                {
                                    
                               <td> <a href="/Haber/ChangeStatusToTrue/@item.ID" class="btn btn-outline-warning">Aktif Yap</a> </td>


                                }



                              

                            </tr>



                        }

                      </tbody>
                    </table>
                    <br />
                   <a href="/Haber/AddHaber" class="btn btn-outline-success">Yeni Hizmet Girişi</a>
                  </div>
                </div>
              </div>
            </div>


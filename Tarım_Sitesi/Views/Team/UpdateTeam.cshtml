@model EntityLayer.Entities.Team
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title"> Hizmet Güncelleme</h4>
                 
                  <form class="forms-sample" method="post" >
                      @Html.HiddenFor(x=> x.ID)
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                        <div class="form-group">
                      <label for="exampleInputName1">Adı Soyadı</label>
                     @Html.TextBoxFor(x => x.PersonName, new { @class = "form-control"})
                       </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleInputEmail3">Görev</label>
                      @Html.TextBoxFor(x => x.Title, new { @class = "form-control"})
                        </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                        <div class="form-group">
                      <label for="exampleTextarea1">Görsel Url</label>
                      @Html.TextBoxFor(x => x.ResimUrl, new { @class = "form-control"})
                       </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleTextarea1">Facebook Url</label>
                        @Html.TextBoxFor(x => x.FacebookUrl, new { @class = "form-control"})
                      </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleTextarea1">İnstagram Url</label>
                       @Html.TextBoxFor(x => x.InstagramUrl, new { @class = "form-control"})
                        </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleTextarea1">Twitter Url</label>
                       @Html.TextBoxFor(x => x.TwitterrUrl, new { @class = "form-control"})
                      </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
  <div class="form-group">
                      <label for="exampleTextarea1">Twitter Url</label>
                       @Html.TextBoxFor(x => x.linkedin, new { @class = "form-control"})
                      </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                    <button type="submit" class="btn btn-primary me-2">Güncelle</button>
                  </form>
                </div>
              </div>
            </div>


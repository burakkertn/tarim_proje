@using EntityLayer.Entities
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Ekip Arkadaşlarımızın Listesi</h4>
                 
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                          <tr>
                                    <th>Görsel</th>
                                    <th>#</th>
                                    <th>Ad</th>
                                     <th>Görev</th>
                                     <th>Resim URL</th>
                                     <th>Facebook URL</th>
                                     <th>İnstagram URL</th>
                                    <th>Twitter URL</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                        </tr>
                      </thead>
@*--------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <tbody>
                      @foreach(var item in Model)

                        {
                            <tr>
                                 <td class="py-1">  <img src="@item.ResimUrl" alt="image"/> </td>
                                 <td >@item.ID</td>
                                 <td>@item.PersonName</td>
                                 <td>@item.Title</td>
                                 <td>@item.ResimUrl</td>
                                 <td>@item.FacebookUrl</td>
                                 <td>@item.InstagramUrl</td>
                                 <td>@item.TwitterrUrl</td>
                                 <td> <a href="/Team/DeleteTeam/@item.ID" class="btn btn-outline-danger">Sil</a> </td>
                                  <td> <a href="/Team/UpdateTeam/@item.ID" class="btn btn-outline-success">Güncelle</a> </td>

                             
                            </tr>                       
                        }
                      
                      </tbody>
@*--------------------------------------------------------------------------------------------------------------------------------------------------*@
                    </table>
                    <br />
                     <a href="/Team/AddTeam" class="btn btn-outline-success">Yeni Personel Girişi</a>
                  </div>
                </div>
              </div>
            </div>

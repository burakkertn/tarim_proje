@model EntityLayer.Entities.Resim
@{
    ViewData["Title"] = "AddResim";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Yeni Görsel Ekleme</h4>
                 
                  <form class="forms-sample" method="post" >
                    <div class="form-group">
                      <label for="exampleInputName1">Başlık</label>
                      <span asp-validation-for="Title" class="text-danger"></span>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Görsel URL" asp-for="Title"  >
                    </div>
@* ------------------------------------------------------------------------------------------------------------------------------------------------------------*@

                    <div class="form-group">
                      <label for="exampleInputEmail3">Görsel Yolu</label>
                       <span asp-validation-for="ImageUrl" class="text-danger"></span>
                      <input type="text" class="form-control"  placeholder="Görsel URL" asp-for="ImageUrl" >
                  
                    </div>
@* ------------------------------------------------------------------------------------------------------------------------------------------------------------*@
                        <div class="form-group">
                      <label for="exampleInputEmail3">Açıklama</label>
                       <span asp-validation-for="Description" class="text-danger"></span>
                      <input type="text" class="form-control"  placeholder="Açıklama Giriniz.." asp-for="Description" >
                    </div>

                  <br />
                   
                    <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                  </form>
                </div>
              </div>
            </div>

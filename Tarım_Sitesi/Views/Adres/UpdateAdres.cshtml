@model EntityLayer.Entities.Adres
@{
    ViewData["Title"] = "UpdateAdres";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

      <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title"> Hizmet Güncelleme</h4>
                 
                  <form class="forms-sample" method="post" >
                      @Html.HiddenFor(x=> x.ID)
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                        <div class="form-group">
                      <label for="exampleInputName1">Açıklama 1</label>
                     @Html.TextBoxFor(x => x.Description1, new { @class = "form-control"})
                       </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleInputEmail3">Açıklama 2</label>
                      @Html.TextBoxFor(x => x.Description2, new { @class = "form-control"})
                        </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                        <div class="form-group">
                      <label for="exampleTextarea1">Açıklama 3</label>
                      @Html.TextBoxFor(x => x.Description3, new { @class = "form-control"})
                       </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleTextarea1">Açıklama 4</label>
                        @Html.TextBoxFor(x => x.Description4, new { @class = "form-control"})
                      </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                              <div class="form-group">
                      <label for="exampleTextarea1">Harita Konumu</label>
                        @Html.TextBoxFor(x => x.MapInfo, new { @class = "form-control"})
                      </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                     

                    <button type="submit" class="btn btn-primary me-2">Güncelle</button>
                  </form>
                </div>
              </div>
            </div>


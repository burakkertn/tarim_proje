@using EntityLayer.Entities
@model List<Adres>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

       <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Ekip Arkadaşlarımızın Listesi</h4>
                 
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                          <tr>
                                    <th>Açıklama</th>
                                    <th>Açıklama 2</th>
                                    <th>Açıklama 3</th>
                                     <th>Açıklama 4</th>
                                      <th>Harita Konumu</th>
                                     <th>Güncelle</th>
                                     
                                    
                                    
                        </tr>
                      </thead>
@*--------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <tbody>
                      @foreach(var item in Model)

                        {
                            <tr>
                                
                                 <td >@item.Description1</td>
                                 <td>@item.Description2</td>
                                 <td>@item.Description3</td>
                                 <td>@item.Description4</td>
                                 <td>@item.MapInfo</td>
                          
                                  <td> <a href="/Adres/UpdateAdres/@item.ID" class="btn btn-outline-success">Güncelle</a> </td>

                             
                            </tr>                       
                        }
                      
                      </tbody>
@*--------------------------------------------------------------------------------------------------------------------------------------------------*@
                    </table>
                    <br />
                   
                  </div>
                </div>
              </div>
            </div>


